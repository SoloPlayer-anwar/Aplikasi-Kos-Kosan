<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".dashboard.checkout.CheckoutActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/checkout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/home"
        android:textColor="@color/darkblue2"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/away"
        android:textSize="13dp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/abuabu"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/bjm"
        android:textColor="@color/darkblue2"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/roboto_medium"
        android:text="@string/banjarmasin"
        android:textColor="@color/abuabu"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#f2f2f2"
        app:cardCornerRadius="10dp"
        app:cardElevation="14dp"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView7">


        <ImageView
            android:id="@+id/ivPosterCheckout"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvlokasiCheckout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/banjarmasin"
        android:textSize="16dp"
        android:textColor="@color/drakblue"
        app:layout_constraintStart_toEndOf="@+id/cardView6"
        app:layout_constraintTop_toTopOf="@+id/cardView6" />

    <TextView
        android:id="@+id/tvKosCheckout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/medium_class"
        android:textSize="12dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="@color/teal_700"
        app:layout_constraintEnd_toEndOf="@+id/tvlokasiCheckout"
        app:layout_constraintStart_toStartOf="@+id/tvlokasiCheckout"
        app:layout_constraintTop_toBottomOf="@+id/tvlokasiCheckout" />

    <TextView
        android:id="@+id/tvrateCheckout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_baseline_star_24_putri"
        android:gravity="center"
        android:text="9.7"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvKosCheckout"
        app:layout_constraintEnd_toEndOf="@+id/textView9"
        app:layout_constraintTop_toTopOf="@+id/tvlokasiCheckout" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/layout_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/layout_login">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="22dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:textSize="16dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/customer_data"
                        android:textColor="@color/teal_700" />


                    <Spinner
                        android:id="@+id/spKamar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:textAlignment="center"
                        android:dropDownSelector="@color/yellow"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="24dp" />


                    <Spinner
                        android:id="@+id/spBulan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:textAlignment="center"
                        android:dropDownSelector="@color/yellow"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="24dp" />


                    <Spinner
                        android:id="@+id/spStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:textAlignment="center"
                        android:layout_marginTop="3dp"
                        android:dropDownSelector="@color/yellow"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="14dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Booking Detail"
                        android:layout_marginLeft="8dp"
                        android:textSize="16dp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/teal_700"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/kamar"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins"
                        android:drawableLeft="@drawable/ic_baseline_check_circle_outline_24"
                        android:drawablePadding="6dp"
                        android:textColor="@color/drakblue"/>


                        <TextView
                            android:id="@+id/spinerResult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:drawableRight="@drawable/ic_detail"
                            android:drawablePadding="6dp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/darkblue2"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sewa"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/poppins"
                            android:drawableLeft="@drawable/ic_baseline_check_circle_outline_24"
                            android:drawablePadding="6dp"
                            android:textColor="@color/drakblue"/>


                        <TextView
                            android:id="@+id/spinerResultBulan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:drawableRight="@drawable/ic_detail"
                            android:drawablePadding="6dp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/darkblue2"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/poppins"
                            android:drawableLeft="@drawable/ic_baseline_check_circle_outline_24"
                            android:drawablePadding="6dp"
                            android:textColor="@color/drakblue"/>


                        <TextView
                            android:id="@+id/tvKelasResult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/kamar"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:drawableRight="@drawable/ic_detail"
                            android:drawablePadding="6dp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/teal_200"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fasilitas"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/poppins"
                            android:drawableLeft="@drawable/ic_baseline_check_circle_outline_24"
                            android:drawablePadding="6dp"
                            android:textColor="@color/drakblue"/>


                        <TextView
                            android:id="@+id/tvFasilitas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Free"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:drawableRight="@drawable/ic_detail"
                            android:drawablePadding="6dp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/pink"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="14dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Harga"
                            android:layout_weight="1"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/poppins"
                            android:drawableLeft="@drawable/ic_baseline_check_circle_outline_24"
                            android:drawablePadding="6dp"
                            android:textColor="@color/drakblue"/>


                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/idr"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textSize="16dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:drawableRight="@drawable/ic_detail"
                            android:drawablePadding="6dp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/teal_700"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/pending"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pending"
                        android:visibility="gone"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins"
                        android:drawableLeft="@drawable/ic_baseline_check_circle_outline_24"
                        android:drawablePadding="6dp"
                        android:textColor="@color/drakblue"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnCheckout"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/layout_yellow"
                android:textAllCaps="false"
                android:text="Checkout Now"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="24dp"
                android:textColor="@color/white"/>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>